
<h1> User Dashboard for <%= current_user.name %> </h1>
</br>
<div>
  <div class = "col-xs-9">
    <div class = "avatar">
      <img src="<%=@user.avatar%>">
    </div>
    <div class = "user-info">
      <h5>City: <%= @user.city %> </h5>
    </br>
    </br>
      <h5>Sports: <%= @user.sports %> </h5>
    </br>
    </br>
      <h5>Positions: <%= @user.positions %> </h5>
    </br>
    </br>
      <h5>Stats: <%= @user.stats %> </h5>
    </br>
    </br>
      <h5>Bio: <%= @user.bio %> </h5>
    </br>
    </br>
    </br>
    </br>
    </br>
    </br>
    </div>
  </div>
  <div class="coach-display">
    <% @coach.each do |c| %>
      <div class = "col-xs-4">
        <div class = "coach-pic">
          <img src="<%=c.avatar%>">
        </div>
        <div class = "fac-name">
          <h5> <%= c.name %> </h5>
        </br>
          <h5> <%= c.zip_code %> </h5>
        </br>
        </br>
        </div>
      </div>
    <% end %>

  </div>
